            // å–å‡ºç¾æ¬¡æ•¸æœ€å¤šçš„å‰12å€‹é£Ÿæ
            const sorted = Object.entries(ingredientCount).sort((a, b) => b[1] - a[1]);
            const topIngredients = sorted.slice(0, 12).map(([ing]) => ing);

            // æ¸…ç©ºèˆŠæ¨™ç±¤
            commonIngredientsTagsContainer.innerHTML = '';
