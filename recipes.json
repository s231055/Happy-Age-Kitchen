        function initializeCommonIngredientsTags() {
            // å–å¾—æ‰€æœ‰é£Ÿè­œçš„é£Ÿæï¼Œçµ±è¨ˆå‡ºç¾æ¬¡æ•¸ï¼Œå–å‰å¹¾åä½œç‚ºå¸¸ç”¨é£Ÿæ
            const ingredientCount = {};
            mockRecipes.forEach(recipe => {
                recipe.ingredients.forEach(ing => {
