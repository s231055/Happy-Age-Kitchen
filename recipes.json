        async function takePhoto() {
            if (!videoStream) {
                alert("è«‹å…ˆé–‹å•Ÿæ”åƒé ­ï¼");
                return;
            }

            // å–å¾—åŸå§‹å½±åƒå°ºå¯¸
            const originalWidth = cameraStream.videoWidth;
            const originalHeight = cameraStream.videoHeight;

            // è¨­å®šæœ€å¤§å°ºå¯¸
            const maxSize = 1000;
            let targetWidth = originalWidth;
            let targetHeight = originalHeight;

            // è¨ˆç®—ç¸®æ”¾æ¯”ä¾‹
            if (originalWidth > maxSize || originalHeight > maxSize) {
                const scale = Math.min(maxSize / originalWidth, maxSize / originalHeight);
                targetWidth = Math.round(originalWidth * scale);
                targetHeight = Math.round(originalHeight * scale);
            }

            // èª¿æ•´ canvas å°ºå¯¸
            canvas.width = targetWidth;
            canvas.height = targetHeight;
            ctx.drawImage(cameraStream, 0, 0, targetWidth, targetHeight);

            // å°‡ canvas å…§å®¹è½‰æ›ç‚º Base64 æ•¸æ“š URL
            const imageDataUrl = canvas.toDataURL('image/jpeg', 0.8); // 0.8 æ˜¯åœ–åƒå“è³ª

            showLoading(); // é¡¯ç¤ºåŠ è¼‰æŒ‡ç¤ºå™¨
            await analyzeImageWithOpenRouter(imageDataUrl); // èª¿ç”¨ OpenRouter API é€²è¡Œåˆ†æ
        }

        async function analyzeImageWithOpenRouter(imageDataUrl) {
            try {
                // æå– Base64 æ•¸æ“šï¼Œç§»é™¤å‰ç¶´ "data:image/jpeg;base64,"
                const base64Image = imageDataUrl.split(',')[1];

                const response = await fetch(OPENROUTER_API_URL, {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${OPENROUTER_API_KEY}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        model: OPENROUTER_MODEL,
                        messages: [
                            {
                                role: 'user',
                                content: [
                                    {
                                        type: 'text',
                                        text: 'è«‹åˆ—å‡ºåœ–ç‰‡ä¸­å‡ºç¾çš„é£Ÿç‰©æˆ–æˆåˆ†ï¼Œä¸¦ç”¨ã€Œã€ã€åˆ†éš”ï¼Œä¾‹å¦‚è˜‹æœã€é¦™è•‰ã€ç‰›å¥¶ã€‚å¦‚æœæ²’æœ‰æ‰¾åˆ°ä»»ä½•é£Ÿç‰©ï¼Œè«‹å›ç­”ã€Œç„¡ã€ã€‚'
                                    },
                                    {
                                        type: 'image_url',
                                        image_url: {
                                            url: `data:image/jpeg;base64,${base64Image}`
                                        }
                                    }
                                ]
                            }
                        ]
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    console.error('OpenRouter API éŒ¯èª¤:', errorData);
                    throw new Error(`OpenRouter API å‘¼å«å¤±æ•—: ${response.status} ${response.statusText} - ${errorData.message || ''}`);
                }

                const data = await response.json();
                console.log('OpenRouter API å›æ‡‰:', data);

                let recognizedText = 'ç„¡'; // é è¨­å€¼
                if (data.choices && data.choices.length > 0 && data.choices[0].message && data.choices[0].message.content) {
                    recognizedText = data.choices[0].message.content.trim();
                }

                // å½ˆå‡ºæ¨¡æ…‹æ¡†é¡¯ç¤ºè­˜åˆ¥çµæœ
                showRecognitionModal(recognizedText);

            } catch (error) {
                console.error('è­˜åˆ¥åœ–ç‰‡æ™‚ç™¼ç”ŸéŒ¯èª¤:', error);
                alert('è­˜åˆ¥é£Ÿææ™‚ç™¼ç”ŸéŒ¯èª¤ï¼Œè«‹ç¨å¾Œå†è©¦ã€‚\n' + error.message);
                hideLoading(); // éš±è—åŠ è¼‰æŒ‡ç¤ºå™¨
            } finally {
                // ä¸åœ¨é€™è£¡éš±è— loadingï¼Œåœ¨ confirmRecognition æˆ– hideRecognitionModal è£¡éš±è—
            }
        }

