        // æ·»åŠ é£Ÿæåˆ°åˆ—è¡¨
        function addIngredient(ingredientName) {
            const normalizedIngredient = ingredientName.toLowerCase(); // çµ±ä¸€å°å¯«

            if (!identifiedIngredients.has(normalizedIngredient)) {
