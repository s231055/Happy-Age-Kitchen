            } else {
                alert('å¾ˆæŠ±æ­‰ï¼Œæ²’æœ‰æ‰¾åˆ°ç¬¦åˆæ‚¨é£Ÿæçš„é£Ÿè­œã€‚è«‹å˜—è©¦èª¿æ•´é£Ÿæåˆ—è¡¨ã€‚');
            }
        }

        // é¡¯ç¤ºé£Ÿè­œè©³æƒ…
        function showRecipeDetail(recipe) {
