            const foundRecipes = mockRecipes.filter(recipe => {
                // æª¢æŸ¥é£Ÿè­œçš„é—œéµé£Ÿææ˜¯å¦éƒ½åœ¨è¼¸å…¥é£Ÿæä¸­
                return recipe.keyIngredients.every(keyIng => normalizedInput.includes(keyIng.toLowerCase()));
            });

