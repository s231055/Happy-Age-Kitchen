        async function startCamera() {
            try {
                // æª¢æŸ¥æ˜¯å¦æœ‰æ”åƒé ­æ¬Šé™
                const stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: 'environment' } }); // å„ªå…ˆä½¿ç”¨å¾Œç½®æ”åƒé ­
                cameraStream.srcObject = stream;
