            stepDiv.classList.add('recipe-step');
            stepDiv.innerHTML = `
                <div class="step-number">æ­¥é©Ÿ ${step.number} / ${currentRecipeSteps.length}</div>
                ${step.image ? `<div class="step-image"><img src="${step.image}" alt="æ­¥é©Ÿ ${step.number} åœ–ç‰‡"></div>` : ''}
                <div class="step-text">${step.text}</div>
                ${step.timer ? `<div class="step-timer">è¨ˆæ™‚å™¨ï¼š${step.timer}</div>` : ''}
            `;
            recipeStepsContainer.appendChild(stepDiv);

            // æ›´æ–°å°èˆªæŒ‰éˆ•ç‹€æ…‹
            document.querySelector('.nav-back').disabled = (currentStepIndex === 0);
            document.querySelector('.nav-next').disabled = (currentStepIndex === currentRecipeSteps.length - 1);

            // å¦‚æœèªéŸ³å°è¦½å•Ÿç”¨ï¼Œå‰‡æœ—è®€ç•¶å‰æ­¥é©Ÿ
            if (voiceGuideEnabled) {
